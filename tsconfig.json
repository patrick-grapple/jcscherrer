{
  "include": ["src/**/*.svelte", "src/**/*.ts"],
  "exclude": ["node_modules/*", "dist/*"],
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "types": ["svelte", "node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
